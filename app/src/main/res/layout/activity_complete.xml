<!-- res/layout/order_complete_layout.xml -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:text="KioskEasePro"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/orderCompleteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="해당 상품들이 주문이 완료되었습니다."
        android:textSize="18sp"
        android:textColor="#000000"
        android:padding="16dp"
        />

    <Button
        android:id="@+id/backToOrderPageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="주문 페이지로 돌아가기"
        android:textColor="#000000"
        android:background="@drawable/border_edge"/>
</LinearLayout>
